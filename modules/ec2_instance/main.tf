resource "aws_instance" "simple_nodejs"{
  ami = var.ami
  instance_type = var.instance_type  
  count = var.instances_count
  tags = {
    Name = var.instance_names[count.index]
  }
  security_groups = [aws_security_group.TF_SG.name]
}


resource "aws_security_group" "TF_SG" {
  name        = "Allow SSH, HTTP and HTTPS"
  description = "Allow SSH, HTTP and HTTPS"

  ingress {
    description      = "HTTPS"
    from_port        = 443
    to_port          = 443
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  ingress {
    description      = "HTTP"
    from_port        = 80
    to_port          = 80
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  ingress {
    description      = "SSH"
    from_port        = 22
    to_port          = 22
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  egress {
    from_port        = 0
    to_port          = 0
    protocol         = "-1"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  tags = {
    Name = "test"
  }
}
